@{
    Layout = null;
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <title>云销系统</title>
    <link href="/modules/css/layout.css" rel="stylesheet" />
    <link href="/modules/css/home/login.css" rel="stylesheet" />
    <link href="/modules/css/base.css" rel="stylesheet" />

    <script src="/Scripts/sea.js"></script>
    <script src="/Scripts/sea-config.js"></script>
    <script type="text/javascript">
        seajs.use(["scripts/home"], function (home) {
            home.initLogin();
        });
    </script>
</head>
<body>
    <header>
        <img src="/Content/homeico/logo-white.png" style="width:40px;height:40px; margin-left:10px; margin-top:5px;" />
    </header>
    <div class="login-body">
        <div class="main">
            <div class="title">云销系统</div>
            <div class="login">
                <div class="loginbar">
                    <input type="text" id="iptUserName" placeholder="请输入账号" value="@ViewBag.UserName" maxlength="25"/>
                </div>
                <div class="loginbar">
                    <input type="password"  placeholder="请输入密码" id="iptPwd"/>
                </div>
                <div class="remember-box">
                    <div class="cb-remember-password ico-check ">
                        一周内保持登录
                    </div>
                </div>
                <div id="loginBtn"> 
                    <div class="btnLogin" id="btnLogin">登录</div>
                </div>
                <div class="other-account">
                    <div class="other-text">使用其他账号登录</div>
                    <div class="accounts">
                       <a class="mingdao" href="/Home/MDLogin"></a>
                    </div>
                </div>
             
            </div>
        </div>
        <div class="copyright">
            上海云销信息科技有限公司 (C)2015-2016
        </div>
    </div>
</body>
</html>
