@{
    ViewBag.Title = "销售团队";
}

@section css{
    <link rel="stylesheet" href="/modules/css/system/system.css" />
}
@section scripts{
    <script type="text/javascript">
        seajs.use(["scripts/system/teams"], function (obj) {
            obj.init('');
        });
    </script>
}
<div class="header-box">
    <span class="header-title left">销售团队设置</span>
    <div class="ico-add" id="addTeam">添加销售团队</div>
</div>
<div class="content-body">
    <div class="team-header">
        所有销售团队
    </div>
    <div id="teams" class="team-list">

    </div>
</div>
<ul class="dropdown-ul hide" id="ddlTeam" style="width:90px;">
    <li id="editTeam">编辑团队</li>
    <li id="addUser">添加成员</li>
    <li id="deleteTeam">删除团队</li>
</ul>

<ul class="dropdown-ul hide" id="ddlUser" style="width:90px;">
    <li id="removeObject">移出团队</li>
</ul>
