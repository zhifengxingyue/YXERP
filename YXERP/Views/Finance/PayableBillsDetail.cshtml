@{
    ViewBag.Title = "应付账单详情";
}

@section scripts{
    <script src="/modules/plug/laydate/laydate.js"></script>
    <script type="text/javascript">
        seajs.use(["scripts/finance/detail"], function (ObjectJS) {
            ObjectJS.init('@ViewBag.ID');
        });
    </script>
}
<div class="header-box">
    <span class="header-title left">应付账单详情</span>
    <a class="ico-back right" href="@(Url.RequestContext.HttpContext.Request.UrlReferrer == null ? "/Finance/PayableBills" : "javascript:history.go(-1);")" >
        返回
    </a>
</div>
<div class="content-body">
    <div class="content-title">
        <div class="left titlename" id="infoBillingCode"></div>
    </div>
    <ul class="content-info">
        <li>
            <span class="column-title">应付金额：</span>
            <span class="column-value" id="infoTotalMoney"></span>
        </li>
        <li>
            <span class="column-title">源单据编号：</span>
            <a class="column-value" href="/Purchase/DocDetail" target="_blank" id="infoSourceCode"></a>
        </li>
        <li>
            <span class="column-title">已付金额：</span>
            <span class="column-value" id="infoPayMoney"></span>
        </li>
        <li>
            <span class="column-title">开票金额：</span>
            <span class="column-value" id="infoInvoiceMoney"></span>
        </li>
        <li>
            <span class="column-title">创建人：</span>
            <span class="column-value" id="infoCreateUser"></span>
        <li>
            <span class="column-title">创建时间：</span>
            <span class="column-value" id="infoCreateTime"></span>
        </li>
    </ul>
    <div class="tab-nav mTop30">
        <ul class="tab-nav-ul left">
            <li class="hover" data-id="navPays">付款记录</li>
        </ul>
        <div id="addPay" class="btn right">付款登记</div>
        <div id="addInvoice" class="btn right">登记发票</div>
    </div>
    <table id="navPays" class="nav-partdiv table-list mTop20">
        <tr class="tr-header">
            <td class="width150 tLeft">付款日期</td>
            <td class="">付款金额</td>
            <td class="tLeft">备注</td>
            <td class="width150">登记人</td>
            <td class="width200 tRight">登记时间</td>
        </tr>
    </table>
</div>
<ul class="dropdown-ul hide" style="width:65px;">
    <li id="editContact">编辑</li>
    <li id="deleteContact">删除</li>
</ul>