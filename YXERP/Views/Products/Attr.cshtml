@{
    ViewBag.Title = "通用属性设置";
}

<link href="/modules/css/stock/products.css" rel="stylesheet" />

@section scripts{
    <script type="text/javascript">
        seajs.use(["scripts/products/attr"], function (attr) {
            attr.init();
        });
    </script>
}
<div class="header-box">
    <span class="header-title left">属性设置</span>
    <a href="javascript:void(0)" id="addAttr" class="ico-add left">新建通用属性</a>
    <div class="right searth-module"></div>
</div>
<div class="content-body">
    <table class="table-list">
        <tr class="tr-header" id="attrList">
            <td class="width300">属性名称</td>
            <td>描述</td>
            <td class="width100">设置属性值</td>
            <td class="width150">创建时间</td>
            <td class="width150">创建人</td>
            <td class="width80">操作</td>
        </tr>
    </table>
    <div id="pager" class="mTop20"></div>
    <div class="attr-value-box" id="attrValueBox">
        <div class="title">
            <span class="header-title">颜色</span>
            <div class="add-value"><input class="value-name" type="text" id="valueName" placeholder="添加属性值" maxlength="20" /><span class="ico-input-add">+</span></div>
        </div>
        
        <ul id="attrValues">
            
        </ul>
    </div>
</div>
<ul class="dropdown-ul hide"  style="width:65px;">
    <li id="updateObject">编辑</li>
    <li id="deleteObject">删除</li>
</ul>
