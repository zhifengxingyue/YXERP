@{
    ViewBag.Title = "产品列表";
}

<link rel="stylesheet" href="/modules/css/shoppingcart/filterproducts.css" />

@section scripts{
    <script src="/modules/plug/kindeditor-4.1.7/kindeditor.js"></script>
    <script type="text/javascript">
        seajs.use(["scripts/products/product"], function (obj) {
            obj.initList();
        });
    </script>
}

<div class="header-box">
    <span class="header-title left">产品列表</span>
    <a href="ProductAdd" class="ico-add left mTop4 mLeft20">添加新品</a> 
</div>
<div class="content-body">
    <div class="top-div">
        <ul class="category-map left">
            <li data-id="">全部分类 <span>></span></li>
        </ul>
        <div class="right searth-module" data-text="输入产品编码/名称/助记码" data-width="300"> </div>
    </div>
    <div class="attr-filter">
        <ul class="category-child attr-item">
            <li class="attrkey">分类：</li>
            <li class="attrValues">
                <ul id="category-child">

                </ul>
            </li>
        </ul>
        <ul class="attr-item" id="attr-price">
            <li class="attrkey">价格：</li>
            <li class="attrValues">
                <ul>
                    <li class="hover price" data-begin="" data-end="">不限</li>
                    <li class="price" data-begin="0" data-end="199">0-199</li>
                    <li class="price" data-begin="200" data-end="499">200-499</li>
                    <li class="price" data-begin="500" data-end="999">500-999</li>
                    <li class="price" data-begin="1000" data-end="1999">1000-1999</li>
                    <li class="price" data-begin="2000" data-end="3499">2000-3499</li>
                    <li class="price" data-begin="3500" data-end="4999">3500-4999</li>
                    <li class="price" data-begin="5000" data-end="">5000以上</li>
                    <li>
                        <input type="text" id="beginprice" />&nbsp;-&nbsp;
                        <input type="text" id="endprice" />
                    </li>
                    <li class="search-btn">
                        <span class="btn" id="searchprice">搜索</span>
                    </li>
                </ul>
            </li>
        </ul>
    </div>
    <div class="filter-orderby">
        <ul class="orderby">
            <li class="orderby-new hover">新品<span class="shang"></span><span class="xia"></span></li>
            <li class="orderby-sales">销量<span class="shang"></span><span class="xia"></span></li>
            <li class="orderby-price">价格<span class="shang"></span><span class="xia"></span></li>
        </ul>
    </div>
    <table class="table-list mTop20">
        <tr class="tr-header" id="product-items">
            <td class="m-len tLeft">产品编码</td>
            <td class="tLeft">产品名称</td>
            <td class="m-len tLeft">分类名称</td>
            <td class="m-len">品牌</td>
            <td class="m-len">优惠价</td>
            <td class="m-len">是否上架</td>
            <td class="m-len">是否新品</td>
            <td class="m-len">是否推荐</td>
            <td class="s-len">编辑</td>
        </tr>
    </table>
    <div id="pager" class="mTop20"></div>
</div>
