@{
    ViewBag.Title = "员工管理";
}

@section css{
    <link rel="stylesheet" href="/modules/css/system/organization.css" />
}
@section scripts{
    <script type="text/javascript">
        seajs.use(["scripts/organization/users"], function (obj) {
            obj.init();
        });
    </script>
}
<div class="header-box">
    <span class="header-title left">员工管理</span>
    <div class="btn mLeft20" id="addUser">添加员工</div>
    <div class="btn mLeft20" id="addMDUser">明道用户导入</div>
</div>
<div class="content-body">
    <div class="mBottom15">
    <div class="left">
        <span>部门：</span>
        <select id="Departments">
            <option value=""  selected ="selected">所有</option>
            @{
                foreach(var item in ViewBag.Departments){
                <option value="@item.DepartID">@item.Name</option>
                }
                }
        </select>
        <span class="pLeft30">角色：</span>
        <span >
        <select id="Roles">
            <option value=""  selected ="selected">所有</option>
            @{
                foreach(var item in ViewBag.Roles){
                <option value="@item.RoleID">@item.Name</option>
                }
                }
        </select>
            </span>
    </div>
    <div class="right searth-module" data-text="输入姓名/手机/Email..." data-width="200"> </div>
    <div class="clear"></div>
    </div>
    <table class="table-list mTop20">
        <tr class="tr-header">
            <td>姓名</td>
            <td class="width150">手机号码</td>
            <td>Email</td>
            <td>部门</td>
            <td>角色</td>
            <td class="width150">创建时间</td>
            <td class="width150">创建人</td>
            <td class="width80">操作</td>
        </tr>
    </table>
</div>
<ul class="dropdown-ul hide" style="width:90px;">
    <li id="updateObject">编辑信息</li>
    <li id="setObjectRole">角色设置</li>
    <li id="deleteObject">注销员工</li>
</ul>