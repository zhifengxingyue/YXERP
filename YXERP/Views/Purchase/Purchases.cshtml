@{
    ViewBag.Title = "我的采购";
}

<link href="/modules/css/stock/purchase.css" rel="stylesheet" />
@section scripts{
    <script type="text/javascript">
        seajs.use(["scripts/purchase/purchases"], function (obj) {
            obj.init('@ViewBag.Type');
        });
    </script>
}
<div class="header-box">
    <span class="header-title left">我的采购</span>
    <a href="/Purchase/Purchase" class="ico-add left">新建采购</a>
   
</div>
<div class="search-box">
    <div class="search-header">
        <ul class="search-status">
            <li data-id="-1" class="hover">全部</li>
            <li data-id="0" class="">待审核</li>
            <li data-id="1" class="">部分上架</li>
            <li data-id="2" class="">已上架</li>
            <li data-id="4" class="">已作废</li>
        </ul>
         <div class="right searth-module" data-text="关键字搜索..." data-width="160"> </div> 
    </div>
</div>
<div class="content-body">
    <table class="table-list">
        <tr class="tr-header">
            <td class="tLeft">采购单号</td>
            <td class="tLeft">仓库</td>
            <td class="width100">状态</td>
            <td class="tRight width150">总金额</td>
            <td class="width150">采购员</td>
            <td class="width200">采购日期</td>
            <td class="width80">操作</td>
        </tr>
    </table>
</div>
<ul class="dropdown-ul hide" style="width:65px;">
    <li id="audit">审核</li>
    <li id="invalid">作废</li>
    <li id="delete">删除</li>
</ul>
