@{
    
}
@section css{
<link href="/modules/css/orders/orders.css" rel="stylesheet" />
 }

@section scripts{
    <script type="text/javascript">
        seajs.use(["scripts/orders/orders"], function (ObjectJS) {
            ObjectJS.init('@ViewBag.Type');
        });
    </script>
}
<div class="header-box">
    <span class="header-title left">@ViewBag.Title</span>
    <a href="javascript:void(0)"  id="createOrder" class="ico-add left">新建订单</a>
</div>
<div class="search-box">
    <div class="search-header">
        <ul class="search-status">
            <li data-id="" class="hover">全部阶段</li>
            @foreach (var model in (List<CloudSalesEntity.OrderTypeEntity>)ViewBag.OrderTypes)
            {
                <li data-id="@(model.TypeID)">@(model.TypeName)</li>
            }
        </ul>
    </div>
    <div class="search-body mTop20">
        <div class="left mRight20" id="chooseBranch"></div>
        <div class="left" id="orderType"></div>
        <div class="right searth-module" data-text="关键字搜索..." data-width="160"> </div>
    </div>
</div>
<div class="content-body">
    <table class="table-list mTop10">
        <tr class="tr-header">
            <td class="width30"></td>
            <td class="tLeft">客户名称</td>
            <td class="width50">类型</td>
            <td class="width150">来源</td>
            <td class="width100">阶段</td>
            <td class="width100">联系人</td>
            <td class="width100">联系电话</td>
            <td class="width50"><span id="filterMark"></span></td>          
            <td class="width100">拥有者</td>
            <td class="width150">创建时间</td>
            <td class="width50">操作</td>
        </tr>
    </table>
    <ul class="left batch-operate mTop20">
        <li class="width100 mTop5">
            <span class="ico-check pLeft5" id="checkAll">批量操作</span>
        </li>
        <li>
            <a href="javascript:void(0);" class="btn" id="batchChangeOwner">更换拥有者</a>
        </li>
    </ul>
    <div id="pager" class="mTop20"></div>
</div>
<ul class="dropdown-ul hide" style="width:110px;">
    <li id="changeOwner">更换拥有者</li>
</ul>

