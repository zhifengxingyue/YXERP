@section scripts{
<script src="/Scripts/jquery-1.11.1.js"></script>
<script src="/modules/plug/laydate/laydate.js"></script>
    <script type="text/javascript">
        seajs.use(["scripts/activity/activity"], function (ObjectJS) {
            ObjectJS.init(0);
        });

        $(function () {
            laydate.skin('molv');//切换皮肤，请查看skins下面皮肤库
        });
        var begin = {
            elem: '#BeginTime',
            format: 'YYYY-MM-DD',
            min: laydate.now(),
            max: '2099-06-16',
            istime: false,
            istoday: false
        };

        var end = {
            elem: '#EndTime',
            format: 'YYYY-MM-DD',
            min: laydate.now(),
            max: '2099-06-16',
            istime: false,
            istoday: false
        };
        laydate(begin);
        laydate(end);
    </script>
}
