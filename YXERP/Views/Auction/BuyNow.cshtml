<!DOCTYPE html>
@{
    Layout = null;
    var CurrentUser = (CloudSalesEntity.Users)Session["ClientManager"];
}
<html>
<head>
<title>购买云销系统</title>
<link href="/modules/css/layout.css" rel="stylesheet" />
<link href="/modules/css/base.css" rel="stylesheet" />
<link href="/modules/css/auction/buynow.css" rel="stylesheet" />

<script src="/Scripts/jquery-1.11.1.js"></script>
<script type="text/javascript" src="/Scripts/sea.js"></script>
<script type="text/javascript" src="/Scripts/sea-config.js"></script>
<script src="/modules/scripts/auction/buynow.js"></script>
</head>
<body>
<header>
    <div class="logo left">
        <a href="/Home/Index"><img src="/modules/images/ico-home.png" /></a>
    </div>

    <div id="currentUser" class="currentuser right">
        <span>
            <img src="@(string.IsNullOrEmpty(CurrentUser.Avatar)?"/modules/images/defaultavatar.png":CurrentUser.Avatar)" class="avatar" />
        </span>
        <span class="username">
            @(CurrentUser.Name)
        </span>
        <span class="dropdown">
            <span class="dropdown-top"></span>
            <span class="dropdown-bottom"></span>
        </span>
    </div>
</header>

<div class="step">
    <div class="mBottom20">
        <div class="left selectProduct">
            <div class="stepIco stepIcoActive left">1</div>
            <div class="left stepDes stepDesActive">选择产品</div>
            <div class="clear"></div>
        </div>
        <div class="left mLeft15 sureOrder">
            <div class="stepIco left" style="margin-left:46px;">2</div>
            <div class="left stepDes">确认订单</div>
            <div class="clear"></div>
        </div>
        <div class="left mLeft15 payOrder">
            <div class="stepIco left" style="margin-left:46px;">3</div>
            <div class="left stepDes">支付订单</div>
            <div class="clear"></div>
        </div>
        <div class="clear "></div>
    </div>
</div>

<div class="productList">
    <table class="productListTB" border="0"  cellpadding="0" cellspacing="0" >
        <tr class="trBG">
            <td style="border:none;">
                <div style="padding:8px 45px;">
                    <div class="left" style="position:relative;width:16px;">
                        <div class="diagonalDiv">
                            <div class="diagonalLine"></div>
                        </div>
                        <div class="diagonalDiv2">
                            <div class="diagonalLine2"></div>
                        </div>      
                   </div>
                    <div class="left" style="color:#999;">时间</div>
                    <div class="clear"></div>

               
                    <div style="position:relative;width:16px;margin-left:16px;">
                        <div class="diagonalDiv">
                            <div class="diagonalLine"></div>
                        </div>
                        <div class="diagonalDiv2">
                            <div class="diagonalLine2"></div>
                        </div>
                        <div style="position:absolute;width:24px;left:-23px;top:-3px;color:#999;">人数</div>
                   </div>
                </div>
            </td> 
            <td>1年</td> 
            <td>2年</td> 
            <td>3年</td>  
        </tr>
    </table> 

<div class="mTop20 mBottom20" style="color:#666;font-size:18px;">选择产品</div>

<div class="selectPrpduct">
    <ul>
        <li>
            <span>人数</span>
            <span class="mLeft10">
                <input type="text" style="width:65px;" id="UserCount" data-empty="* 必填" class="input verify" data-type="int" data-text="格式不正确!"/>
            </span>
        </li>
        <li>
            <span>时间</span>
            <span class="mLeft10">
                <select id="UserYear">
                    <option value="1">1年</option>
                    <option value="2">2年</option>
                    <option value="3">3年</option>
                </select>
            </span>
        </li>
    </ul>
</div>

<div class="mTop20">
    <div class="totalPrice">
        <span>价位</span>
        <span class="mLeft10" id="Price">0,000</span><span>￥</span>
    </div>
    <div class="mTop20"><input type="button" id="btn_sureOrder" value="下一步" class="btn" /></div>
</div>

</div>

<div class="productOrder hide">
    <div class="orderInfo">
        <div class="orderInfoTitle">产品信息</div>
        <div class="orderInfoDetail">
            <span>人数 :</span><span class="mLeft5" id="orderUserCount">1</span><span>人</span>
            <span class="mLeft20">时间 :</span><span class="mLeft5" id="orderYear">1</span><span>年</span>
            <span class="mLeft20" style="color:#4a98e7;font-size:18px;">价格 :</span><span class="mLeft5" style="color:#4a98e7;font-size:18px;" id="orderPrice">1</span><span class="mLeft5" style="color:#4a98e7;font-size:18px;">￥</span>
        </div>
    </div>
     <div class="mTop20">
         <input type="button" id="btn_backSelectPrpduct" style="background-color:#aaa;" value="上一步" class="btn" />
         <input type="button"  id="btn_payOrder" value="下一步" class="btn mLeft20" />

     </div>
</div>

<div class="payProductOrder hide">
     aaaaaaaaaaaaaaa
</div>

<div class="dropdown-userinfo hide">
    <div class="top-lump"></div>
    <ul class="items-list">
        <li class="item"><a href="/Home/Logout">安全退出</a></li>
    </ul>
</div>
<script type="text/javascript">
    $(function () {
        seajs.use(["scripts/auction/buynow"], function (ObjectJS) {
            ObjectJS.init();
        });

        //登录信息展开
        $("#currentUser").click(function () {
            $(".dropdown-userinfo").fadeIn("1000");
        });

        $(document).click(function (e) {
            if (!$(e.target).parents().hasClass("currentuser") && !$(e.target).hasClass("currentuser")) {
                $(".dropdown-userinfo").fadeOut("1000");
            }
        });
    });
</script>
</body>
</html>




