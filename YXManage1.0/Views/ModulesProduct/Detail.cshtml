@{
    ViewBag.Title = "模块产品";
}

@section script{
    <script type="text/javascript">
        seajs.use(["scripts/modulesproduct"], function (ModulesProduct) {
            ModulesProduct.detailInit($("#id").val());
        });
    </script>
}
@section leftNav{
    @Html.Partial("_ModulesProductLeftNav")
}
<link href="/modules/css/clients.css" rel="stylesheet" />
<div class="headertitle">
    <span id="pageTitle">添加模块产品</span>
</div>
<ul class="contentnew" style="display:block;">
    <li>
        <span class="columnname">模块：</span>
        <span>
            <select id="ModulesID">
                @foreach (CloudSalesEntity.Modules model in (List<CloudSalesEntity.Modules>)ViewBag.Modules)
                {
                    <option value="@(model.ModulesID)" data-name="@(model.Name)">@(model.Name)</option>
                }
            </select>
        </span>
    </li>
    <li>
        <span class="columnname">周期：</span>
        <span>
            <select id="Period">
                <option value="1">月</option>
                <option value="2">年</option>
            </select>
        </span>
    </li>
    <li>
        <span class="columnname">周期量：</span>
        <span>
            <select id="PeriodQuantity">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
            </select>
        </span>
    </li>
    <li>
        <span class="columnname">人数：</span>
        <span>
            <select id="UserQuantity">
                <option value="1">10</option>
                <option value="2">20</option>
                <option value="3">50</option>
                <option value="4">100</option>
            </select>
        </span>
    </li>
    <li>
        <span class="columnname">价格：</span>
        <span><input type="text" id="Price" class="verify"  maxlength="11"  data-empty="价格不能为空!" /></span>
    </li>

    <li>
        <span class="columnname">描述：</span>
        <span><textarea id="Description"></textarea></span>
    </li>
</ul>
<div class="mTop20">
    <input type="button" id="saveModulesProduct" class="btn" value="添加" />
</div>
<input type="hidden" id="id" value="@ViewBag.ID" />
